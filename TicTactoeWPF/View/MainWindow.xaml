<Window x:Class="TicTactoeWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicTactoeWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.47,1.443" StartPoint="0.465,0.066">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="White" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid Margin="55,26,53,39">
        <Rectangle Margin="2,0,0,0" Stroke="Black">
            <Rectangle.Fill>
                <LinearGradientBrush
EndPoint="0.457,-1.916" StartPoint="0.49,0.982">
                    <GradientStop
Color="Black" Offset="0"/>
                    <GradientStop
Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Grid x:Name="BtnPanel" Margin="101,10,102,52">
            <Button x:Name="Btn3" Content="{Binding Game.Grid[2], Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                    Command="{Binding GameCommand}" CommandParameter="3" FontSize="36"  HorizontalAlignment="Right" Height="50.667" Margin="0" VerticalAlignment="Top" Width="59"/>
            <Button x:Name="Btn2" Content="{Binding Game.Grid[1], Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                    Command="{Binding GameCommand}" CommandParameter="2" FontSize="36" Height="50.667" Margin="74,0,64,0" VerticalAlignment="Top"/>
            <Button x:Name="Btn1" Content="{Binding Game.Grid[0], Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Command="{Binding GameCommand}" CommandParameter="1" FontSize="36" HorizontalAlignment="Left" Height="50.667" Margin="10,0,0,0" VerticalAlignment="Top" Width="59"/>
            <Button x:Name="Btn6" Content="{Binding Game.Grid[5], Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                   Command="{Binding GameCommand}" CommandParameter="6" FontSize="36" HorizontalAlignment="Right" Margin="0,55.667,0,69.333" Width="59"/>
            <Button x:Name="Btn5" Content="{Binding Game.Grid[4], Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                    Command="{Binding GameCommand}" CommandParameter="5" FontSize="36" Margin="74,55.667,64,69.333"/>
            <Button x:Name="Btn4" Content="{Binding Game.Grid[3], Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                    Command="{Binding GameCommand}" CommandParameter="4" FontSize="36" HorizontalAlignment="Left" Margin="10,55.667,0,69.333" Width="59"/>
            <Button x:Name="Btn9" Content="{Binding Game.Grid[8], Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                    Command="{Binding GameCommand}" CommandParameter="9" FontSize="36" HorizontalAlignment="Right" Height="54.333" Margin="0,0,0,10" VerticalAlignment="Bottom" Width="59"/>
            <Button x:Name="Btn8" Content="{Binding Game.Grid[7], Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                    Command="{Binding GameCommand}" CommandParameter="8" FontSize="36" Height="54.333" Margin="74,0,64,10" VerticalAlignment="Bottom"/>
            <Button x:Name="Btn7" Content="{Binding Game.Grid[6], Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                    Command="{Binding GameCommand}" CommandParameter="7" FontSize="36" HorizontalAlignment="Left" Height="54.333" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="59"/>
        </Grid>
        <Button x:Name="button" Content="RESET" Click="Reset_Click" HorizontalAlignment="Right" Height="37" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="112"/>
        <TextBlock x:Name="textBlock" Foreground="White" HorizontalAlignment="Left" Height="30" Margin="10,0,0,17" TextWrapping="Wrap" Text="Player Turn: " VerticalAlignment="Bottom" Width="64"/>
        <TextBlock x:Name="PlayerTurn" Foreground="Red" HorizontalAlignment="Left" Height="30" Margin="86,0,0,17" TextWrapping="Wrap" Text="X" VerticalAlignment="Bottom" Width="20"/>
    </Grid>
</Window>
